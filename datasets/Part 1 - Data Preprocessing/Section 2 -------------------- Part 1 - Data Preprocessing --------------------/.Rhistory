ave(dataset$Salary, FUN = function(x) mean(x, na.rm = TRUE)),  dataset$Salary)
# Codificar las variables categ√≥ricas
dataset$Country = factor(dataset$Country, levels = c("France", "Spain", "Germany"),
labels = c(1, 2, 3))
dataset$Purchased = factor(dataset$Purchased, levels = c("No", "Yes"),
labels = c(0, 1))
library(caTools)
# Dividir el dataset en entrenamiento y testing (80/20) 20,25,30 de testing como mucho
set.seed(123)
split = sample.split(dataset$Purchased, SplitRatio = 0.8)
training_set = subset(dataset, split == TRUE)
testing_set = subset(dataset, split == FALSE)
